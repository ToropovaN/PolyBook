@model LoginViewModel
@{
    ViewData["Title"] = "Авторизация";
}
<div id="selectaccountmode">
    <a class="accountmode selectedmode" asp-area="" asp-controller="Account" asp-action="Login" style="margin-right:15px;"> Авторизация</a>
    <a class="accountmode" asp-area="" asp-controller="Account" asp-action="Register" style="margin-left:15px;"> Регистрация</a>
</div>
<div class="contentblock accountform">
    <div style="width:400px; margin:0 auto;">
        <form asp-area="" asp-controller="Account" asp-action="Login" method="post" asp-route-returnUrl="@ViewBag.returnUrl">
            <div asp-validation-summary="All"></div>
            <div class="accountformrow">
                <label asp-for="Email"></label>
                <input asp-for="Email" />
            </div>
            <div class="accountformrow">
                <label asp-for="Password"></label>
                <input asp-for="Password" />
            </div>
            <div class="remembermerow">
                <label asp-for="RememberMe"></label>
                <input asp-for="RememberMe" />
            </div>
            <div>
                <div class="br10"></div>
                <button onclick="submit" class="button1">Войти</button>
            </div>
        </form>
    </div>
</div>