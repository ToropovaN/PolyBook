@model Book
@{
    string strTitle = "Редактировать Книгу";
    ViewBag.Title = strTitle;
}

<div>
    <h2>@strTitle</h2>
    <div>
        <form asp-area="Admin" asp-controller="Books" asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Date" />
            <input type="hidden" asp-for="ImagePath" />

            <div asp-validation-summary="All"></div>

            <div class="div-box">
                <label asp-for="Title"></label>
                <input asp-for="Title" />
                <!--<span asp-validation-for="Title"></span>-->
            </div>
            <div class="div-box">
                <label asp-for="Text"></label>
                <textarea asp-for="Text"></textarea>
                <!--<span asp-validation-for="Text"></span>-->
                </div>
                <div class="div-box">
                    <label asp-for="ImagePath"></label>
                    <input type="file" name="ImageFile" id="ImageFile" />
                    <div>
                        <img class="img-block" src="~/images/@Model.ImagePath" />
                    </div>
                </div>
                <div class="div-box">
                    <label asp-for="Author"></label>
                    <input asp-for="Author" />
                    <!--<span asp-validation-for="Author"></span>-->
                </div>
                <div class="div-box">
                    <label asp-for="Year"></label>
                    <input asp-for="Year" type="number" min="1800" max="2038" />
                    <!--<span asp-validation-for="Year"></span>-->
                </div>
                <input type="submit" value="Сохранить" />
            </form>
        </div>
    </div>
