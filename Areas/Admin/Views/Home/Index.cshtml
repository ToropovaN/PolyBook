@model IQueryable<Book>
@{
    string strTitle = "Панель администратора";
    ViewBag.Title = strTitle;
}

<div>
    <h2>@strTitle</h2>
    <div>
        <h3>Книги</h3>
        <div class="div-box">
            <a asp-area="Admin" asp-controller="Books" asp-action="Edit" asp-route-id="">Добавить книгу</a>
        </div>
        @if (Model.Any())
        {
            <div>
                @foreach (Book entity in Model)
                {
                <div>
                    <a asp-area="" asp-controller="Books" asp-action="Book" asp-route-id="@entity.Id">
                        @($"{entity.Title}")
                    </a>
                    <a asp-area="Admin" asp-controller="Books" asp-action="Edit" asp-route-id="@entity.Id">Редактировать</a>
                    |
                    <form style="display: inline-block;" id="form-@entity.Id" asp-area="Admin" asp-controller="Books" asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@entity.Id">
                        <a href="#" onclick="document.getElementById('form-@entity.Id').submit();">Удалить</a>
                    </form>
                    |
                </div>
                }
            </div>
        }
    </div>
    <div class="div-box">
        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
            <input type="submit" value="Выйти" />
        </form>
    </div>
</div>


